<h1>Products</h1>

<div class="col-md-5">
    <a href="/products/new" class="btn btn-success">Add New Product</a>
    {{#each products}}
    <div class="well">
        <h3>
            <a href="/products/{{_id}}">{{brand}} {{model}}</a>
        </h3>
        <div class="text-muted">$ {{price}}</div>
        <div class="text-muted">
            {{#if inStock}}
            <b>Yes</b>
            {{else}}
            <b>No</b>
            {{/if}}

        </div>
        <div class="text-muted">{{lastUpdated}}
            <form action="/products/delete/{{_id}}" method="POST">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
        </div>

    </div>
    {{/each}}
</div>