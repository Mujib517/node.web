<h1>New Product</h1>

<form action="/products" method="POST">
    <div class="col-md-5">
        <div class="form-group">
            <select class="form-control" name="brand" required="true">
                <option value="">--select--</option>
                <option>Apple</option>
                <option>Samsung</option>
                <option>Nokia</option>
                <option>Sony</option>
            </select>
        </div>
        <div class="form-group">
            <input type="text" placeholder="Model" class="form-control" minlength="3" maxlength="10" name="model" required="true" />
        </div>
        <div class="form-group">
            <input type="text" placeholder="Price" class="form-control" name="price" pattern="[0-9]{3}" />
        </div>
        <div class="form-group">
            InStock?
            <input type="checkbox" name="inStock" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-info">Save Product</button>
        </div>
    </div>
</form>